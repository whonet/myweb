<% provide(:title, "用户编辑") %>
<h1>更新个人资料</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "账户名" %>
      <%= f.text_field :name %>

      <%= f.label :email, "电子邮件" %>
      <%= f.text_field :email %>

      <%= f.label :password, "密码" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "密码确认" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "保存更改", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>