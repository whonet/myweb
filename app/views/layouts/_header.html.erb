<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "标我吧", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "首页", root_path %></li>
          <% if signed_in? && current_user.admin? %>
            <li><%= link_to "用户列表(管理员专用)", users_path %></li>
          <% end %>
          <% if signed_in? %>            
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %>账户中心 <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "个人资料", current_user %></li>
                <li><%= link_to "设置", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "退出", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "免费注册", signup_path %></li>
            <li><%= link_to "登录", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>